@using DTO
@model Post
@{
    ViewBag.Title = "Sửa tin tức";
    Layout = "~/Areas/Admin/Views/Shared/_HomeLayout.cshtml";
    List<PostCategoryLoadOption> lst = (List<PostCategoryLoadOption>)ViewBag.lstPostCategory;
}
@section script
{
    <script src="~/Assets/Admin/Controllers/EditPost.js"></script>
}
<div class="content">
    <div class="container-fluid">
        <div class="page-title-box">
            <div class="row align-items-center">
                <div class="col-sm-6">
                    <ol class="breadcrumb float-left">
                        <li class="breadcrumb-item"><a href="#">Stexo</a></li>
                        <li class="breadcrumb-item active">@ViewBag.Title</li>
                    </ol>
                </div>
            </div> <!-- end row -->
        </div>
        <!-- end page-title -->

        <div class="row">
            <div class="col-12">
                <div class="card m-b-30">
                    <div class="card-body">
                        <h4 class="mb-3 pb-3 header-title text-center font-weight-bold">Sửa tin tức</h4>
                        <div class="form-group row">
                            <label for="example-text-input" class="col-sm-2 col-form-label">Tên tin tức</label>
                            <div class="col-sm-10">
                                <input class="form-control" type="text" id="txtName" value="@Model.Name">
                                <span class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="example-text-input" class="col-sm-2 col-form-label">Nội dung</label>
                            <div class="col-sm-10">
                                <input class="form-control" type="text" id="txtContent">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="example-text-input" class="col-sm-2 col-form-label">Loại tin tức</label>
                            <div class="col-sm-10">
                                <select class="form-control" id="slPostCategory">
                                    @foreach (var item in lst)
                                    {
                                        <option value="@item.ID">@item.Name</option>
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="example-text-input" class="col-sm-2 col-form-label">Ngày sửa</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" id="txtModifiedDate" value="@Model.ModifiedDate" placeholder="Ngày sửa">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="example-text-input" class="col-sm-2 col-form-label">Người sửa</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" id="txtModifiedBy" value="@Model.ModifiedBy" placeholder="Người sửa">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="example-text-input" class="col-sm-2 col-form-label">Trạng thái</label>
                            <div class="col-sm-10">
                                <div class="custom-control custom-checkbox">
                                    <input type="checkbox" class="custom-control-input" id="ckStatus" checked="@Model.Status">
                                    <label class="custom-control-label" for="ckStatus">Active</label>
                                </div>
                            </div>
                        </div>
                        <div class="form-group row float-right">
                            <<input type="hidden" value="@Model.ID" id="hiddenID" />
                            <button type="button" class="btn btn-primary waves-effect waves-light mr-1" id="btnEdit">Sửa</button>
                            <button type="button" class="btn btn-warning waves-effect m-l-5" id="btnBack">Trở lại</button>
                        </div>
                    </div>
                </div>
            </div> <!-- end col -->
        </div> <!-- end row -->
    </div>
    <!-- container-fluid -->
</div>

