@using LXTHANG_10117004.Models
@model List<CartItemModel>

@{
    ViewBag.Title = "ViewCart";
    Layout = "~/Views/Shared/CommonLayout.cshtml";
    decimal Money = (decimal)ViewBag.Money;
}
<div class="cart-main-area pt-85 pb-90">
    <div class="container" id="lstCart">
        @if (Model.Count > 0)
        {
            <h3 class="cart-page-title">Các mặt hàng của bạn</h3>
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-12">
                    <form action="#">
                        <div class="table-content table-responsive cart-table-content">
                            <table>
                                <thead>
                                    <tr>
                                        <th>Ảnh</th>
                                        <th>Tên</th>
                                        <th>Giá</th>
                                        <th>Số lượng</th>
                                        <th>Tổng tiền</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td class="product-thumbnail">
                                                <a href="#"><img src="@item.Image" style="height:82px" alt=""></a>
                                            </td>
                                            <td class="product-name"><a href="#">@item.Name</a></td>
                                            <td class="product-price-cart"><span class="amount">@(string.Format("{0:#,##0}", item.Price)) VNĐ</span></td>
                                            <td class="product-quantity">
                                                <div class="cart-plus-minus">
                                                    <input class="cart-plus-minus-box txtQuantity" type="number" data-id="@item.ID" value="@item.Quantity">
                                                </div>
                                            </td>
                                            <td class="product-subtotal">@(string.Format("{0:#,##0}", item.Price * item.Quantity)) VNĐ</td>
                                            <td class="product-remove">
                                                <a href="#" class="btn-delete" data-id="@item.ID"><i class="la la-close"></i></a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="cart-shiping-update-wrapper">
                                    <div class="cart-shiping-update">
                                        <a href="#" id="btnContinue">Tiếp tục mua hàng</a>
                                    </div>
                                    <div class="cart-clear">
                                        <button id="btnUpdate">Cập nhật giỏ hàng</button>
                                        <a href="#" id="btnDeleteAll">Xóa giỏ hàng</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                    <div class="row">
                        <div class="col-lg-5 col-md-12">
                            <div class="grand-totall">
                                <div class="title-wrap">
                                    <h4 class="cart-bottom-title section-bg-gary-cart">Thanh toán</h4>
                                </div>
                                <h4 class="grand-totall-title mt-4">Tổng cộng <span>@(string.Format("{0:#,##0}", Money)) VNĐ</span></h4>
                                <a href="/thanh-toan" id="btnPayment">Tiến hành thanh toán</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="p-3 mb-2 bg-danger text-white">Không có sản phẩm nào!</div>
        }
    </div>
</div>

